{
  // Change this to match your project
  "include": [
    "./src/*"
  ],
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
    ],
    "sourceMap": true,
    "sourceRoot": "./src/",
    "target": "ES2017",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    // Generate d.ts files
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true
  }
}